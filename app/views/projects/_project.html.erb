<div id="<%= dom_id project %>" class="container mt-4 p-5 rounded bg-light">
  <div class="jumbotron p-4 bg-white shadow-sm rounded">
    <h3 class="fw-bold"><%= project.name %></h3>

    <p class="text-muted mt-2"><strong>Description:</strong></p>
    <p class="fs-5"><%= project.description %></p>

    <hr class="my-4">

    
    <div class="mt-3 d-flex gap-3">
      <%= link_to "Edit", edit_project_path(project), class: "btn btn-warning btn-lg" %>
      <%= link_to "Back", projects_path, class: "btn btn-secondary btn-lg" %>
      <%= button_to "Delete", project, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-lg" %>
    </div>
  </div>
</div>

