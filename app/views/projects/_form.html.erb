<div class="container mt-4">
  <div class="card shadow-sm p-4">
    <h2 class="text-center mb-4">Project Form</h2>

    <%= form_with(model: @project, local: true, html: { multipart: true }) do |form| %>
      <% if @project.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h4>
          <ul>
            <% @project.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row">
        <div class="col-md-6 mb-3">
          <%= form.label :name, class: "form-label fw-bold" %>
          <%= form.text_field :name, class: "form-control", placeholder: "Enter project name", required: true %>
        </div>

        <div class="col-md-6 mb-3">
          <%= form.label :description, class: "form-label fw-bold" %>
          <%= form.text_area :description, class: "form-control", rows: 4, placeholder: "Enter project description", required: true %>
        </div>

        <div class="col-md-6 mb-3">
          <%= form.label :user_id, class: "form-label fw-bold" %>
          <%= form.hidden_field :user_id, value: current_user.id %>
        </div>

        <div class="col-md-12 mb-3">
          <%= form.label :files, "Upload Files", class: "form-label fw-bold" %>
          <%= form.file_field :files, multiple: true, class: "form-control" %>
          <small class="text-muted">You can upload multiple files (PNG, JPG, PDF, TXT).</small>
        </div>
      </div>

      <div class="d-flex justify-content-center gap-3 mt-3">
        <%= form.submit "Save Project", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>
