<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-body">
          <h1 class="card-title fw-bold"><%= @project.name %></h1>
          <p class="card-text"><strong>Description:</strong></p>
          <p class="card-text"><%= @project.description %></p>
          <hr>
          <p class="text-muted"><strong>ID:</strong> <%= @project.user_id %></p>

          <h2 class="mt-4">Uploaded Files:</h2>
          <% if @project.files.attached? %>
            <ul class="list-group">
              <% @project.files.each do |file| %>
                <li class="list-group-item">
                  <%= link_to file.filename.to_s, url_for(file), target: "_blank", class: "text-decoration-none" %>
                </li>
              <% end %>
            </ul>
          <% else %>
            <p class="text-muted">No files uploaded.</p>
          <% end %>

          <hr>

          <!-- Discussion Threads Section -->
          <h2 class="mt-4">Discussion Threads</h2>

          <% if current_user.has_role?(:admin) %>
            <%= link_to "New Thread", new_project_discussion_thread_path(@project), class: "btn btn-success" %>
          <% end %>

          <% if @project.discussion_threads.any? %>
            <ul class="list-group mt-3">
              <% @project.discussion_threads.each do |thread| %>
                <li class="list-group-item">
                  <h5><strong><%= thread.title %></strong></h5>

                  <div class="mt-2">
                    <%= link_to "Edit", edit_project_discussion_thread_path(@project, thread), class: "btn btn-warning btn-sm" %>
                    <%= link_to "Delete", project_discussion_thread_path(@project, thread), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
                  </div>

                  <!-- Messages Section for Each Thread -->
                  <h5 class="mt-3">Messages</h5>

                  <!-- Message Form -->
                  <%= render 'messages/form', discussion_thread: thread, message: thread.messages.new %>

                  <% if thread.messages.any? %>
                    <ul class="list-group mt-3">
                      <% thread.messages.each do |message| %>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                          <p><strong><%= message.user&.email || "Unknown User" %></strong></p>
                          <% if message.user == current_user %>
                            <div>
                              <%= link_to "Edit", edit_project_discussion_thread_message_path(@project, thread, message), class: "btn btn-warning btn-sm" %>
                              <%= link_to "Delete", project_discussion_thread_message_path(@project, thread, message), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>

                            </div>
                          <% end %>
                        </li>
                      <% end %>
                    </ul>
                  <% else %>
                    <p>No messages yet.</p>
                  <% end %>
                </li>
              <% end %>
            </ul>
          <% else %>
            <p>No discussion threads yet.</p>
          <% end %>

          <div class="mt-4 d-flex gap-3">
            <%= link_to "Edit Project", edit_project_path(@project), class: "btn btn-primary" %>
            <%= link_to "Back to Projects", projects_path, class: "btn btn-secondary" %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
