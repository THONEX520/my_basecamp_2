<div class="container mt-4">
  <div class="card shadow-sm">
    <div class="card-body">
      <h2 class="card-title fw-bold">Edit Discussion Thread</h2>
      <p class="text-muted">Modify the title of this thread.</p>

      <%= form_with(model: [@project, @discussion_thread], local: true, class: "mb-3") do |f| %>
        <div class="mb-3">
          <%= f.label :title, "Thread Title", class: "form-label" %>
          <%= f.text_field :title, class: "form-control", required: true %>
        </div>

        <div class="d-flex gap-3">
          <%= f.submit "Update Thread", class: "btn btn-primary" %>
          <%= link_to "Back", project_path(@project), class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
