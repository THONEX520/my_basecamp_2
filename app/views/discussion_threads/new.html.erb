<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-body">
          <h1 class="card-title fw-bold text-center">Create a Discussion Thread</h1>

          <%= form_with(model: [@project, @discussion_thread], local: true, html: { class: "mt-4" }) do |f| %>
            <div class="mb-3">
              <%= f.label :title, "Title", class: "form-label fw-bold" %>
              <%= f.text_field :title, class: "form-control", required: true, placeholder: "Enter thread title..." %>
            </div>

            <div class="d-flex justify-content-between">
              <%= link_to "Back to Project", project_path(@project), class: "btn btn-secondary" %>
              <%= f.submit "Create Thread", class: "btn btn-primary" %>
            </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>

