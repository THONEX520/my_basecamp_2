<%= form_with(model: [@discussion_thread.project, @discussion_thread, @message], local: true, class: "card p-3 shadow-sm mb-4") do |form| %>
  <div class="mb-3">
    <%= form.label :content, "Message Content", class: "form-label fw-bold" %>
    <%= form.text_area :content, class: "form-control", placeholder: "Type your message here...", rows: 4 %>
  </div>
  
  <div class="text-end">
    <%= form.submit @message.new_record? ? "Post Message" : "Update Message", class: "btn btn-primary px-4" %>
  </div>
<% end %>
